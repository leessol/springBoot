		<script th:inline="javascript">
			
				var formObj = $("#f1");
				$(".delbtn").click(function() {
					formObj.attr("action", "delete.do");
					formObj.attr("method", "delete");
					formObj.submit();
				});
				$(".modbtn").click(function() {
					formObj.attr("action", "modify.do");
					formObj.attr("method", "post");
					formObj.submit();

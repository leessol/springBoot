		<script th:inline="javascript">
			replyManager.getAll("[[${vo.bno}]]", printList);
			function printList(rList) {
				var str = "";
				$.each(rList, function(idx, item) {
					str += "<tr>";
					str += "<td>" + item["rno"] + "</td>";
					str += "<td>" + item["replyText"] + "</td>";
					str += "<td>" + item["replyer"] + "</td>";
					str += "</tr>";
				});
				$("#replyTable").html(str);
			}


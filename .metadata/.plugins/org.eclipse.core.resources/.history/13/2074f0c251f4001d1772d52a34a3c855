<!-- javascript --> 
<th:block layout:fragment="script">
	<script th:inline="javascript">
		$(function(){
		//등록후 추가됨
			var msg = "[[${msg}]]"; 
			if(msg=="success"){
				alert("정상적으로 등록되었습니다");
			}
			var formObj = $("#f1");
			$(".pagination a").click(function(e){
				e.preventDefault();
				formObj.find("[name='page']").val($(this).attr('href'));
				formObj.attr("action", "/board/list");
				formObj.submit();
			});
		});
	</script> 
